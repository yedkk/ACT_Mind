/* pages/index/index.wxss */

.container {
  padding: 0;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  min-height: 100vh;
}

/* 头部区域 */
.header {
  padding: 60rpx 40rpx 40rpx;
  color: white;
  text-align: center;
}

.welcome-text {
  margin-bottom: 20rpx;
}

.greeting {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  opacity: 0.9;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.8;
  line-height: 1.5;
}

/* 快速功能区域 */
.quick-actions {
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 40rpx 30rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.more-link {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: normal;
}

.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  background-color: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background-color: #e9ecef;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 20rpx;
}

.action-icon image {
  width: 100%;
  height: 100%;
}

.action-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 推荐内容区域 */
.recommendations {
  padding: 0 30rpx 30rpx;
  background-color: #fff;
}

.recommendation-card {
  background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  border-left: 6rpx solid #4CAF50;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.card-tag {
  background-color: #4CAF50;
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.card-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.card-footer {
  text-align: right;
}

.card-footer .btn {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 最新动态区域 */
.recent-posts {
  padding: 0 30rpx 30rpx;
  background-color: #fff;
}

.post-list {
  margin-top: 20rpx;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.post-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 22rpx;
  color: #999;
}

.post-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.post-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-stats {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.stat-item {
  margin-right: 24rpx;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx 30rpx;
  background-color: #fff;
  color: #999;
  font-size: 24rpx;
}

/* 空状态样式 */
.empty {
  padding: 80rpx 40rpx;
}

.empty-icon {
  width: 100rpx;
  height: 100rpx;
  opacity: 0.3;
}