/* pages/login/login.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-wrapper {
  width: 100%;
  max-width: 600rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 登录表单 */
.login-form {
  background-color: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.login-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 隐私协议 */
.privacy-agreement {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}

.privacy-agreement .link {
  color: #4CAF50;
  text-decoration: underline;
}

/* 功能介绍 */
.features {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  backdrop-filter: blur(10rpx);
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  opacity: 0.9;
}

.feature-text {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}